<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApiDemoApp.LoginPage"
             Title="">
    <StackLayout
           VerticalOptions="CenterAndExpand">
        
        <StackLayout HorizontalOptions="Center"
                     Spacing="15">
            <Image Source="login.jpg"
                   WidthRequest="100"></Image>
            
            <Label Text="Login Account" 
                   FontSize="24" FontAttributes="Bold" 
                   HorizontalTextAlignment="Center" 
                   Margin="0,0,0,20"/>
            
            <Entry Placeholder="Email Address"
                   WidthRequest="500" 
                   x:Name="Entry_Email"/>
            
            <Entry Placeholder="Password" 
                   x:Name="Entry_Password" 
                   IsPassword="True"/>
            
            <Button Text="Login"
                    FontAttributes="Bold"
                    CornerRadius="24"
                    Background="SkyBlue"
                    TextColor="Black"
                    Margin="0,5,0,0"
                    x:Name="Login_Btn"
                    Clicked="Login_Btn_Clicked"/>
            
        </StackLayout>
    </StackLayout>
</ContentPage>